<section class="content">
   <div class="row">
      <div class="col-md-12">
         <!--breadcrumbs start -->
         <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li class="active"><a href="#">LeaderBoard</a></li>
            <li class="active">All Tasks</li>
         </ul>
         <!--breadcrumbs end -->
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <div class="description-heading">
            <h4>Cognitive Tools for Self Mastery</h4>
            <p>Leaderboard section displaying where you currently stand in comparision to all other participants. </p>
         </div>
      </div>
   </div>
   <style>
      .leaderboard {
      width: 100%;
      } 
   </style>
   <div class="row">
      <div class="col-md-8 leaderboard">
         <section class="panel">
            <header class="panel-heading">
               Leader Board
            </header>
            <div class="panel-body table-responsive">
               <table class="table table-hover">
                  <thead>
                     <tr>
                        <th>#</th>
                        <th>Subject Alias</th>
                        <th>Total Points</th>
                        <!-- <th>Client</th> -->
                        <th>Level</th>
                        <!-- <th>Price</th> -->
                        <th>Status</th>
                        <th>Progress</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%  @users.each do |user| %>
                     <tr>
                        <td> <%= user.id %></td>
                        <td> <%= user.user_name %></td>
                        <td> <%= user.score %></td>
                        <td> <%= user.level %></td>
                        <td><span class="label label-danger"><%= user.experimental_condition %></span></td>
                        <td><span class="badge badge-info">50%</span></td>
                     </tr>
                     <% end %> 
                  </tbody>
               </table>
            </div>
         </section>
      </div>
   </div>
</section>
