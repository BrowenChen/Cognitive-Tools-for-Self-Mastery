<style>

    .entire-activity-display {
        position: relative;
        height: 500px;
    }
    .activity-display {
        position: relative;
        border: 1px solid #eee;
        height: 95%;
        width: 95%;
        padding-bottom: 5px;
    }

    .panel-body {
      position: relative;
      height: 90%;
    }

    .clear:before,
    .clear:after {
      content:" ";
      display:table;
    }
    .clear:after {
      clear:both;
    }

    #activity-progress-input {
        width: 70%;
        margin-right: 15px;
        padding: 0;
    }

    .experiment-partial {
      position: relative;
      width: 95%;
      height: 95%;
    }
 

</style>


<div class="row" style="margin: 10px;">
    <div class="col-md-8">
       <!--Activity Main Screen-->
       <section class="panel entire-activity-display">
          <header class="panel-heading">
            Activity Display
          </header>
          <div class="panel-body clear">
             <div class="container experiment-partial">

                 <section class="panel general activity-display">
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div id="1" class="tab-pane active">
                                        <%= render 'activityPanelContent' %>
                                    </div>
                                    <div id="2" class="tab-pane">
                                        Second panel activity
                                    </div>
                                    <div id="3" class="tab-pane">
                                        Third panel activity
                                    </div>
                                    <div id="contact" class="tab-pane">
                                        <%= render 'activityPanelContent' %>
                                    </div>
                                </div>
                            </div>
                </section>


             </div>
          </div>

       </section>
       <!--earning graph end-->
    </div>

    <style>


    </style>
    
    <div class="col-lg-4">
       <!--chat start-->
       <section class="panel">
          <header class="panel-heading">
             My Activity List
          </header>
          <div class="panel-body" id="noti-box">

            <div class="activities-wrapper row">
              <% @activities.each do |activity| %>
                <!-- Insert Activity partial only if activity id matches with current logged in user -->
                <% if current_user.id == activity.user_id %>
                    <span data-item-id="<%= activity.id%>" id="activity_<%= activity.id%>"><a id="activity_select" data-toggle="tab" href="#<%= activity.id%>"> <%= render 'activityBar', activity: activity %> </a></span>
                <% end %>
              <% end %>
            </div>
          </div>
       </section>
    </div>
<!-- End row -->
</div>

<div class="activities-wrapper row">
  <% @activities.each do |activity| %>
    <!-- Insert Activity partial only if activity id matches with current logged in user -->
    <% if current_user.id == activity.user_id %>
    	<%= render 'activity', activity: activity %>
    <% end %>
  <% end %>
</div>
