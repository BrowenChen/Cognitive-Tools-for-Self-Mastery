- if current_user.experimental_condition != "Initial condition"
  .row style='margin:10px;'
    .col-md-8
      // Activity Main Screen
      section.panel.entire-activity-display
        header.panel-heading Activity Display

        .panel-body.clear
          .container.experiment-partial
            section.panel.general.activity-display
              .panel-body#game-panel
                .tab-content
                  .tab-pane.active = render 'activityPanelContent'

    .col-md-4
      section.panel.activityPanel
        header.panel-heading My To-Do List

        .panel-body#noti-box
          - if next_activity_by_points
            - if current_user.experimental_condition == 'advice'
              .row.text-center.alert
                | Hint: It would be best to do 
                span#next-activity-id = next_activity_by_points.content
                |  next.

            - elsif current_user.experimental_condition == 'forced'
              .row.text-center.alert
                | You have to complete 
                span#next-activity-id = next_activity_by_points.content
                | next.

          .row.activities-wrapper style='padding-top:10px;'
            - @activities.each do |activity|
              // Insert Activity partial only if activity id matches with current logged in user
              - if current_user.id == activity.user_id
                span data-activity-id="#{activity.id}" data-question-id="#{activity.a_id}" id="activity_#{activity.id}"
                  - if can_work_on_activity?(current_user.experimental_condition, activity, next_activity_by_points)
                    a.activity-item#activity_select data-toggle="tab" href="##{activity.a_id}"
                      = render 'activityBar', activity: activity, disabled: false

                  - else
                    = render 'activityBar', activity: activity, disabled: true

  .row.activities-wrapper
    - @activities.each do |activity|
      // Insert Activity partial only if activity id matches with current logged in user
      - if current_user.id == activity.user_id
      	= render 'activity', activity: activity

.experiment-display
