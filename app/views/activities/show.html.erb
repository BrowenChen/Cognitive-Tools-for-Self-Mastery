
<div class="activities-wrapper row">
  <div class="activity">
    <div class="activity-head">
      <div class="name">
        Owen Chen
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @activity.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @activity.content %>
    </p>
    <div class="text-center">
      <%= link_to "Cancel", activities_path %>
    </div>
  </div>
</div>

<div class="text-center edit-links">
  <%= link_to "Cancel", activities_path %>
  |
  <%= link_to "Edit Post", edit_activity_path(@activity) %>
</div>
