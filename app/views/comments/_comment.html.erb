<!-- Comment Partial -->

<div id="comment">
  <div class="user-name">
    <%= comment.user.user_name %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
    <%= link_to activity_comment_path(activity, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
    <!-- Comment deletion bug? -->
      <span class="glyphicon glyphicon-remove delete-comment">
      </span>
  <% end %>

</div>

<% end %>
