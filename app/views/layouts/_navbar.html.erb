

<nav class="navbar nav-left">
    <div class="navbar-header">
<!--       <button class="navbar-toggle collapsed" data-target="#bs-navbar-collapse-1" data-toggle="collapse" type="button">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button> -->
      <div class="navbar-brand">
        <%= link_to "ToDo List Experiment", root_path %>
      </div>
    </div>
    <div class="nav-body">
    	<div class="user-section">
    		<div class="user-panel">
                    <div class="pull-left image">
	    				<img src="<%= asset_path( 'avatar.png' ) %>" id="avatar"  class="img-circle" alt="User Image"/>
				</div>
				<style>
					#user-description strong {
						
					}

				</style>
	    			<div class="pull-left info" id="user-description">
	    				<% if user_signed_in? %>
		    				<h4 id="user_name"> <%= current_user.user_name %> </h4>

		    				<!-- Psuedo Rewards with levels or points, or none displayed -->
		    				<% if current_user.experimental_condition == "Initial condition" %>
								<i class="fa fa-circle text-success"></i>
								<br>	
								<i class="fa fa-circle text-info"></i>		
							<% elsif current_user.experimental_condition == "points condition" || current_user.experimental_condition == "constant points" %>
                        <i class="fa fa-circle text-success"></i> <span style="font-size:150%"><strong> Level: <%= current_user.level %>  </strong> </span>	                         <br/>
                        <i class="fa fa-circle text-info"></i> <span style="font-size:150%"><strong> Score: <%= current_user.score%> </strong></span>
							<% elsif current_user.experimental_condition == "monetary condition" %>
								<i class="fa fa-circle text-success"></i> <span style="font-size:150%"><strong> Level: <%= current_user.level %> </strong>
								</span>
                <div style="font-size:125%"><i class="fa fa-circle text-info"></i>  <strong> Money: $ <%= current_user.score.to_f / 10.0 %>0 </strong></div>
							<% else %>
								<!--
                                <i class="fa fa-circle text-success"></i>	
								<br>	
								<i class="fa fa-circle text-info"></i>		
                                -->
                                <br/><br/><br/>
							<% end %>	

							<!-- Level Name -->
							<% if current_user.experimental_condition == "Initial condition" %>
								 <span> </span> <!-- Empty -->
							<% elsif current_user.experimental_condition == "control condition" %>
								<span></span>
							<% else %>
										<!-- Level Name here -->
								<i class="fa fa-circle-o"></i>
                                <span style="font-size:125%">
									<% if current_user.level == 1 %>
										Columnist
									<% elsif current_user.level == 2 %>
										Published Author
									<% elsif current_user.level == 3 %>
										National Book Award
									<% elsif current_user.level == 4 %>
										Pulitzer Prize
									<% else %>
										Nobel Prize in Literature
									<% end %>	
                                </span>
							<% end %>

		    			<% else %>
		    				<h5> Please log in </h5>
		    			<% end %>	
	    			</div>										
    		</div>
    	</div>
        <br/><br/>

	    <div>
			<ul class="nav nav-custom-list">
			  <% if user_signed_in? %>
			  	<!-- Displays only if this user is the admin user -->
			  	<% if current_user.is_admin? %>
				    <li>
				       <%= link_to new_activity_path do %>
				       	 <i class="fa fa-dashboard"></i> <span> New Activity </span>
				       <% end %>
				    </li>
			    <% end %>
			    <!-- Path to user's personal activities -->
			    <li>
			      <%= link_to my_activities_activity_path(current_user) do %>
			      	<i class="fa fa-gavel"></i> <span> My Tasks </span>
			      <% end %>
			    </li>

			    <li>
			      <%= link_to user_details_activity_path(current_user) do %>
			      	<i class="fa fa-globe"></i> <span> Account </span>
			      <% end %>
			    </li>
			    <li>
			      <%= link_to destroy_user_session_path, method: :delete do %>
			      	<i class="fa fa-glass"></i><span> Logout </span>
			      <% end %>
			    </li>
			  <% else %>
			    <li class="active">
			      <%= link_to new_user_session_path do %>
			      	<i class="fa fa-globe"></i> <span> Log in </span>
			      <% end %>
			    </li>
			    <li>
			      <%= link_to new_user_registration_path do %>
			      	<i class="fa fa-glass"></i><span> Register </span>
			      <% end %>
			    </li>
			  <% end %>
			</ul>
	    </div>	
	</div>

</nav>

<script>
	//Fix the active nav element bug
	$("ul.nav li").click(function(){
		$("ul.nav li").removeClass("active");		
		$(this).addClass("active");
	});

</script>


