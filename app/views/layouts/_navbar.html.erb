    <div class="nav-body">
    	<div class="user-section">
    		<div class="user-panel">
                    <div class="pull-left image">
	    				<img src="<%= asset_path( 'avatar04.png' ) %>" id="avatar"  class="img-circle" alt="User Image"/>
	    			</div>
	    			<div class="pull-left info" id="user-description">
	    				<% if user_signed_in? %>
		    				<h4 id="user_name"> <%= current_user.user_name %> </h4>
							<a href="#"><i class="fa fa-circle text-success"></i> Level: <%= current_user.level %> </a>	
							<br>	
							<a href="#"><i class="fa fa-circle-o"></i> Score: <%= current_user.score %> </a>									    			
